{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@capital/*": ["./capital/src/*"],
      "@plugins/*": ["./plugins/*"]
    },
    "typeRoots": ["node_modules/@types", "plugins/*/typings"]
  },
  "exclude": ["node_modules", "**/__tests__/*"]
}
