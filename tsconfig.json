{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "module": "amd",
    "target": "ES6",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@plugins/*": ["./plugins/*"]
    }
  },
  "exclude": ["node_modules", "**/__tests__/*"]
}
